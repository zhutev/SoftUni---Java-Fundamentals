package ArraysExercise;

import java.util.Scanner;

public class P01Train {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int countWagons = Integer.parseInt(scanner.nextLine());

        int sumOfPeople = 0;

        for (int i = 1; i <= countWagons; i++) {
            int peopleInCurrentWagon = Integer.parseInt(scanner.nextLine());

            System.out.print(peopleInCurrentWagon + " ");
            sumOfPeople = sumOfPeople + peopleInCurrentWagon;

            if (i == countWagons) {
                System.out.println();

            }
        }
        System.out.println(sumOfPeople);
    }
}
